{% extends isAjaxRequest != true ? "base.twig" : "ajax.twig" %}
{% block body %}
    {% if contents %}
        <div class="alert alert-secondary" role="alert">
            {% if title %}<h3>{{ title }}</h3><hr>{% endif %}
            <p class="mt-3 text-center">
                {{ contents | raw }}
            </p>
        </div>
    {% endif %}    
{% endblock %}