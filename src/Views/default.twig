{% extends isAjaxRequest != true ? "base.twig" : "ajax.twig" %}
{% block body %}
    {% if contents %}
        <div class="alert alert-secondary" role="alert">
            <h3>{{ title }}</h3><hr>
            <p style="font-size: 1.5rem;" class="mt-3 text-center">
                {{ contents | raw }}
            </p>
        </div>
    {% endif %}    
{% endblock %}