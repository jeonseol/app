{% extends isAjaxRequest != true ? "base.twig" : "ajax.twig" %}

{% block body %}
    {% if details == true %}
        <div class="alert alert-secondary" role="alert">
            <h3>{{ title }}</h3><hr>
            {% if code != null %}
            <div><strong>Code:</strong> {{ code }}</div>
            {% endif %}{% if message != null %}
            <div><strong>Message:</strong> {{ message }}</div>
            {% endif %}{% if file != null %}
            <div><strong>File:</strong> {{ file }}</div>
            {% endif %}{% if line != null %}
            <div><strong>Line:</strong> {{ line }}</div>
            {% endif %}
        </div>
        {% if trace != null %}
            <div class="alert alert-dark">
                    <h3>Trace</h3><hr>
                    <pre class=""><code>{{ trace }}</code></pre>
            </div>
        {% endif %}
    {% else %}
    <div class="alert alert-secondary" role="alert">
        <h3>{{ title }}</h3>
        <hr>
        <p class="text-center">A website error has occurred. Sorry for the temporary inconvenience.</p>
    </div>
    {% endif %}
{% endblock %}

