<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="referrer" content="no-referrer">
        {% block meta %}{% endblock %}

        <!-- Title -->
        <title>{% block title %}{{ apptitle }}{% if title %} - {{ title }}{% endif %}{% endblock %}</title>

        <!-- scripts -->
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" defer></script>
        <script src="https://cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js" defer></script>

        <!--/ scripts -->
   
        <!-- Styles -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/themes/bootstrap.min.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Sans:700,400,300|Raleway:900,900i">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.1/css/all.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.compat.min.css">
        <link rel="stylesheet" href="{{ base_path() }}/assets/theme.css">
        {% block styles %}{% endblock %}
        <!--/ Styles -->
        <link rel="icon" href="{{ base_path() }}/assets/images/slim.png">
    </head>
    <body class="bg-light">
        <div class="loader sticky top d-none"></div>
        {% include 'base/header.twig' %}
        <main class="container">{% block body %}{% endblock %}</main>
        {% block scripts %}{% endblock %}
        {% include 'base/footer.twig' %}
    </body>
</html>